---
import {AudioPlayer} from '../AudioPlayer/AudioPlayer.jsx'

export interface Props {
  appName: string;
}
const { appName } = Astro.props;
---

<div class='music-app-desktop-icon'/>

<div
  class="music-app"
  data-appName={appName}
  data-drag-boundary="true"
>
<div class="crt-overlay-effect"/>
<div class="music-app-top-bar"> 
  <span>{appName}</span> 
  <span class='close-app'> 
    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-hidden="true" role="img"  preserveAspectRatio="xMidYMid meet" viewBox="0 0 20 20">
      <path d="M16 2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm-2.939 12.789L10 11.729l-3.061 3.06l-1.729-1.728L8.271 10l-3.06-3.061L6.94 5.21L10 8.271l3.059-3.061l1.729 1.729L11.729 10l3.06 3.061l-1.728 1.728z" fill="currentColor"></path>
    </svg>
  </span>
</div>
  <AudioPlayer client:visible/>
</div>

<style>
  .music-app-desktop-icon{
    position: absolute;
    width: 50px;
    height: 50px;
    top: 20%;
    right: 20px;
    cursor: pointer;
    color: whitesmoke;
    padding: 15px;
    background-image: url('data:image/png;base64,')
  }
  .music-app-desktop-icon::before{
    content:'H4CKER.FM RADIO';
    font-size: 0.6rem;
    position: absolute;
    top: 55px;
    left: 0 
  }

  .music-app-desktop-icon:hover{
    border: 1px dashed #f5f5f580;
  }
 
  .music-app-top-bar{;
    display: flex;
    justify-content: space-between;
    cursor: grab;
    background-color: gray;
    width: 100%;
  }

  .music-app{
    border: 1px solid #ccc;
    z-index: 9;
    position:absolute;
    width: 350px;
    background-color: black;
  }

  .close-app{
    cursor: pointer;
  } 

  .close-app svg{
    width: 20px;
  }

  .close-app svg:hover{
    color: #a11010
  }

</style>



<script src={Astro.resolve('./baseApp.js')} type="module"/>
