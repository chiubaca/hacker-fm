---
import {AudioPlayer} from '../AudioPlayer/AudioPlayer.jsx'

export interface Props {
  appName: string;
}
const { appName } = Astro.props;
---

<div class='music-app-desktop-icon'/>


<div
  class="music-app"
  data-appName={appName}
  data-drag-boundary="true"
>
<div class="crt-overlay-effect"/>
<div class="music-app-top-bar"> {appName} </div>
  <AudioPlayer client:visible/>
</div>

<style>
  .music-app-desktop-icon{
    position: absolute;
    width: 50px;
    height: 50px;
    top: 20%;
    right: 20px;
    cursor: pointer;
    color: whitesmoke;
    padding: 15px;
    background-image: url('assets/walkman.png');
  }
  .music-app-desktop-icon::before{
    content:'H4CKER.FM RADIO';
    font-size: 0.6rem;
    position: absolute;
    top: 55px;
    left: 0 
  }

  .music-app-desktop-icon:hover{
    border: 1px dashed #f5f5f580;
  }
 

  .music-app-top-bar{
    cursor: grab;
    background-color: gray;
    width: 100%;
  }

  .music-app{
    border: 1px solid #ccc;
    z-index: 9;
    position:absolute;
    width: 350px;
    background-color: black;
  }

  .webgl {
    width: 100px;
    height: 100px;
  }

</style>



<script src={Astro.resolve('./baseApp.js')} type="module"/>
